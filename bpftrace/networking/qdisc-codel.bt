 * 21-Apr-2019  Brendan Gregg   Created this.
 */

BEGIN
{
	printf("Tracing qdisc codel latency. Hit Ctrl-C to end.\n");
}

kprobe:codel_qdisc_enqueue
{
	@start[arg0] = nsecs;
}

kretprobe:codel_qdisc_dequeue
/@start[retval]/
{
	@us = hist((nsecs - @start[retval]) / 1000);
	delete(@start[retval]);
}

END
{
	clear(@start);
}
