BEGIN
{
	printf("Tracing icache lookups... Hit Ctrl-C to end.\n");
	printf("%10s %10s %5s\n", "REFS", "MISSES", "HIT%");
}

kretprobe:find_inode_fast
{
	@refs++;
	if (retval == 0) {
		@misses++;
	}
}

interval:s:1
{
	$hits = @refs - @misses;
	$percent = @refs > 0 ? 100 * $hits / @refs : 0;
	printf("%10d %10d %4d%%\n", @refs, @misses, $percent);
	clear(@refs);
	clear(@misses);
}

END
{
	clear(@refs);
	clear(@misses);
}
